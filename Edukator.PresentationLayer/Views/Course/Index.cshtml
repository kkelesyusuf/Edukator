@model List<Edukator.EntityLayer.Concrete.Course>
@{
    Layout = null;
}
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<div class="container">
    <br />
    <br />
    <br />
    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Fiyat</th>
            <th>Kategori</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.CourseID</th>
                <th>@item.Title</th>
                <th>@item.Price</th>
                <th>@item.CategoryID</th>
                <th><a href="#" class="btn btn-outline-danger">Sil</a></th>
                <th><a href="#" class="btn btn-outline-success">Güncelle</a></th>
            </tr>
        }
    </table>
    <a href="#" class="btn btn-outline-primary">Yeni Kurs Girişi</a>
</div>
